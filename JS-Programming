    ammoCount = 30;
  const round = '5.56/.223';
}

function resetMiniMag556() {
    ammoCount = 10;
  const round = '5.56/.223';
}

function resetBigBoy556() {
    ammoCount = 100;
  const round = '5.56/.223';
}

